<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/root" android:background="#e6000000" android:layout_width="180dp" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/m_layoutTitle" android:paddingTop="0dp" android:layout_width="150dp" android:layout_height="wrap_content" android:layoutDirection="ltr">
        <TextView android:textSize="9sp" android:textColor="#ffeb3b" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:text="@string/ai_gun_down_percent_float_title" android:layout_weight="0.1"/>
        <Button android:layout_gravity="right" android:id="@+id/close_window" android:background="@mipmap/close_btn" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/m_layoutAIGunAdjust" android:layout_width="140dp" android:layout_height="wrap_content" android:layout_marginTop="3dp">
        <Button android:id="@+id/reduce" android:background="@mipmap/minus" android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/m_textGunDownPercent" android:background="#80000000" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="70dp" android:layout_height="wrap_content" android:text="0" android:layout_marginStart="4dp" android:layout_toEndOf="@+id/reduce"/>
        <Button android:gravity="center" android:id="@+id/add" android:background="@mipmap/plus" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="4dp" android:layout_toRightOf="@+id/m_textGunDownPercent" android:layout_alignParentLeft="false" android:layout_alignParentRight="false" android:layout_alignParentBottom="false" android:layout_marginStart="4dp" android:layout_toEndOf="@+id/m_textGunDownPercent"/>
    </LinearLayout>
</LinearLayout>
