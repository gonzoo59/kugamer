<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_scan_ble_filter" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="@android:color/black" android:id="@+id/tv_scan_ble_filter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ble_filter"/>
        <EditText android:textSize="14sp" android:textColor="@android:color/black" android:id="@+id/ed_scan_ble_filter" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/device_keyword" android:inputType="text" android:paddingStart="3dp" android:paddingEnd="3dp"/>
    </LinearLayout>
    <TextView android:textColor="#444444" android:gravity="center_vertical" android:id="@+id/tv_scan_tip" android:background="#f2f3f7" android:layout_width="match_parent" android:layout_height="@dimen/item_height" android:text="@string/scan_tip" android:paddingStart="@dimen/padding_left" android:paddingEnd="@dimen/padding_left"/>
    <com.ajguan.library.EasyRefreshLayout android:id="@+id/easy_refresh" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rc_device_list" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="-2dp" android:layout_below="@+id/rl_device_list"/>
    </com.ajguan.library.EasyRefreshLayout>
</LinearLayout>
