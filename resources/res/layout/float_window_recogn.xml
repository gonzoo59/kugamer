<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layoutDirection="ltr">
    <TextView android:textSize="12sp" android:textColor="#02f80c" android:id="@+id/float_window_recogn" android:background="#80000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:textAlignment="center"/>
    <RelativeLayout android:id="@+id/agile_layer" android:layout_width="140dp" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_below="@+id/float_window_recogn">
        <Button android:gravity="center" android:id="@+id/add" android:background="@mipmap/plus" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="4dp" android:layout_toRightOf="@+id/agile_text" android:layout_alignParentLeft="false" android:layout_alignParentRight="false" android:layout_alignParentBottom="false" android:layout_marginStart="4dp" android:layout_toEndOf="@+id/agile_text"/>
        <Button android:id="@+id/reduce" android:background="@mipmap/minus" android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentLeft="true"/>
        <Button android:textSize="7sp" android:textColor="@color/colorWhite" android:id="@+id/btn_to_all_scope" android:background="@mipmap/all_scope_off_chs" android:layout_width="20dp" android:layout_height="20dp" android:text="" android:lineSpacingExtra="0sp" android:textAlignment="center" android:layout_marginStart="@dimen/ai_icon_space" android:layout_toEndOf="@+id/add"/>
        <Button android:textSize="7sp" android:textColor="@color/colorWhite" android:id="@+id/btn_ai_stage" android:background="@mipmap/all_scope_off_chs" android:layout_width="20dp" android:layout_height="20dp" android:text="" android:lineSpacingExtra="0sp" android:textAlignment="center" android:layout_marginStart="@dimen/ai_icon_space" android:layout_toEndOf="@+id/btn_to_all_scope"/>
        <Button android:id="@+id/btn_crosshair" android:layout_width="20dp" android:layout_height="20dp" android:layout_weight="0" android:textAlignment="center" android:layout_marginStart="@dimen/ai_icon_space" android:layout_toEndOf="@+id/btn_ai_stage"/>
        <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/agile_text" android:background="#80000000" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="20dp" android:layout_height="wrap_content" android:text="0" android:layout_marginStart="4dp" android:layout_toEndOf="@+id/reduce"/>
    </RelativeLayout>
</RelativeLayout>
