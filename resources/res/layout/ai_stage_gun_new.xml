<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/root" android:background="#e6000000" android:layout_width="170dp" android:layout_height="wrap_content" android:layoutDirection="ltr">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="0dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:gravity="left" android:id="@+id/close_window" android:background="@mipmap/close_btn" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="10dp"/>
        <Space android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        <Button android:textSize="9sp" android:textColor="#ffffff" android:id="@+id/m_btnCopyM4" android:background="@drawable/round_rect" android:layout_width="wrap_content" android:layout_height="22dp" android:layout_marginRight="2dp" android:text="@string/copy_m4" android:layout_weight="0" android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/layout_parts_reduce" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView android:textSize="9sp" android:textColor="#00ff00" android:id="@+id/parts_reduce_title" android:background="#80000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/parts_reduce" android:layout_weight="0" android:textAlignment="textEnd"/>
        <TextView android:textSize="9sp" android:textColor="#00ff00" android:id="@+id/parts_reduce_value" android:background="#80000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="" android:layout_weight="0.2" android:textAlignment="center"/>
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <Button android:textSize="15sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/parts_reduce_minus" android:background="@mipmap/minus" android:layout_width="20dp" android:layout_height="20dp"/>
            <Button android:textSize="15sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/parts_reduce_plus" android:background="@mipmap/plus" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="3dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="left" android:orientation="vertical" android:id="@+id/m_layoutAIDynamicM4" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="9sp" android:textColor="#00ff00" android:background="#80000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ai_gun_stage_title" android:layout_weight="0" android:textAlignment="textEnd"/>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <Button android:textSize="15sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/m_btnDeleteStage" android:background="@mipmap/minus" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="5dp"/>
                <Button android:textSize="15sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/m_btnAddStage" android:background="@mipmap/plus" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="left" android:orientation="horizontal" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage1" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="2dp" android:text="1"/>
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage2" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="1dp" android:text="2"/>
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage3" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="1dp" android:text="3"/>
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage4" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="1dp" android:text="4"/>
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage5" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="1dp" android:text="5"/>
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage6" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="1dp" android:text="6"/>
        </LinearLayout>
        <LinearLayout android:gravity="left" android:orientation="horizontal" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage7" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="2dp" android:text="7"/>
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage8" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="1dp" android:text="8"/>
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage9" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="1dp" android:text="9"/>
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage10" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="1dp" android:text="10"/>
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage11" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="1dp" android:text="11"/>
            <Button android:textSize="16sp" android:textColor="@color/stageText0" android:gravity="center" android:id="@+id/m_btnStage12" android:background="@color/stage" android:layout_width="@dimen/stage_sz" android:layout_height="@dimen/stage_sz" android:layout_marginLeft="1dp" android:text="12"/>
        </LinearLayout>
        <TextView android:textSize="9sp" android:textColor="#ffeb3b" android:background="#80000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/ai_stage_time_len" android:layout_weight="0" android:textAlignment="textEnd"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatSeekBar android:textColor="#ffffff" android:id="@+id/stage1_rate" android:layout_width="0dp" android:layout_height="wrap_content" android:max="255" android:progress="50" android:progressDrawable="@drawable/ai_stage_seekbar_style" android:layout_weight="1"/>
            <TextView android:textSize="10sp" android:textColor="#00ff00" android:id="@+id/stage1_value" android:background="#80000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_weight="0.2" android:textAlignment="center"/>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <Button android:textSize="15sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/stage_time_minus" android:background="@mipmap/minus" android:layout_width="20dp" android:layout_height="20dp"/>
                <Button android:textSize="15sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/stage_time_plus" android:background="@mipmap/plus" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:textSize="9sp" android:textColor="#ffeb3b" android:background="#80000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/ai_stage_gun_press" android:layout_weight="0" android:textAlignment="textEnd"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatSeekBar android:textColor="#ffffff" android:id="@+id/stage2_rate" android:layout_width="0dp" android:layout_height="wrap_content" android:max="255" android:progress="50" android:progressDrawable="@drawable/ai_stage_seekbar_style" android:layout_weight="1"/>
            <TextView android:textSize="10sp" android:textColor="#00ff00" android:id="@+id/stage2_value" android:background="#80000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_weight="0.2" android:textAlignment="center"/>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <Button android:textSize="15sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/stage_minus" android:background="@mipmap/minus" android:layout_width="20dp" android:layout_height="20dp"/>
                <Button android:textSize="15sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/stage_plus" android:background="@mipmap/plus" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="9sp" android:textColor="@color/colorRed" android:id="@+id/m_textErr" android:background="#80000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/no_gun_detect" android:layout_weight="0" android:textAlignment="textEnd"/>
</LinearLayout>
