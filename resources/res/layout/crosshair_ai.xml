<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/root" android:background="#e6000000" android:layout_width="150dp" android:layout_height="wrap_content" android:layoutDirection="ltr">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="0dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_gravity="center" android:id="@+id/close_window" android:background="@mipmap/close_btn" android:layout_width="20dp" android:layout_height="20dp"/>
        <TextView android:textSize="9sp" android:textColor="#ffeb3b" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/ai_crosshair_adjust_title" android:layout_weight="0"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="0dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="120dp" android:layout_height="78dp" android:layout_marginTop="10dp" android:layout_below="@+id/add_table" android:layout_centerHorizontal="true">
            <Button android:id="@+id/rightOff" android:background="@mipmap/move_right" android:layout_width="25dp" android:layout_height="25dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <Button android:id="@+id/leftOff" android:background="@mipmap/move_right" android:layout_width="25dp" android:layout_height="25dp" android:layout_centerVertical="true" android:rotation="-180"/>
            <Button android:id="@+id/upOff" android:background="@mipmap/move_right" android:layout_width="25dp" android:layout_height="25dp" android:layout_centerHorizontal="true" android:rotation="-90"/>
            <Button android:id="@+id/downOff" android:background="@mipmap/move_right" android:layout_width="25dp" android:layout_height="25dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:rotation="90"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="9sp" android:textColor="@color/colorWhite" android:id="@+id/scope_off_crosshair_offset" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/crosshair_pos" android:layout_weight="0" android:layout_centerInParent="true" android:textAlignment="textEnd"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
