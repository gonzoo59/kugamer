<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/shape_double_circle_write" android:layout_width="match_parent" android:layout_height="match_parent" android:layoutDirection="ltr">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerHorizontal="true">
        <Button android:id="@+id/up1" android:background="@drawable/ic_baseline_arrow_upward_24" android:layout_width="24dp" android:layout_height="24dp"/>
        <TextView android:textColor="@android:color/holo_red_dark" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="W"/>
        <View android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textColor="@android:color/holo_red_dark" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="S"/>
        <Button android:id="@+id/down1" android:background="@drawable/ic_baseline_arrow_downward_24" android:layout_width="24dp" android:layout_height="24dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
        <Button android:id="@+id/left" android:background="@drawable/ic_baseline_arrow_back_24" android:layout_width="24dp" android:layout_height="24dp"/>
        <TextView android:textColor="@android:color/holo_red_dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="A" android:paddingStart="10dp"/>
        <View android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textColor="@android:color/holo_red_dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="D" android:paddingEnd="10dp"/>
        <Button android:id="@+id/right" android:background="@drawable/ic_baseline_arrow_forward_24" android:layout_width="24dp" android:layout_height="24dp"/>
    </LinearLayout>
</RelativeLayout>
